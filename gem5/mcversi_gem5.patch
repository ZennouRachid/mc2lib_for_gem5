+
+    auto used = McVerSi::resetAll(tc->getSystemPtr()->cacheLineSize());
+    size_t used_bytes = used.size() * sizeof(Addr);
+    panic_if(used_bytes > len, "Guest did not allocate enough memory!");
+    CopyIn(tc, used_addrs, used.data(), used_bytes);
+
+    zeroTestMem(tc);
